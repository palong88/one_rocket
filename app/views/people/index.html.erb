         <div class="row">
      <% @people.each do |person| %>
        <div class="col s12 m3">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text valign center">
              <p><%= image_tag("profile.png",  size: "110x80", class: "circle responsive-img") %></p><br>
              <span class="card-title "><%= person.name %></span>
              <p><b>Email: </b> <br><%= person.email %><br><b> Start Date: </b><br><%= Date.parse(person.start_date).strftime("%d %b. %Y") %></p>
              
            </div>
            <div class="card-action">
                      <div class=" valign center">
                                                                      
                                                                        <%= link_to '<button class="btn btn-success btn-xs">
                                                                        <i class=" fa fa-pencil"></i></button>'.html_safe, edit_person_path(person) %>
                                                                        <%= link_to '<button class="btn btn-primary btn-xs">
                                                                        <i class=" fa fa-trash-o"></i></button>'.html_safe, person, method: :delete, data: { confirm: 'Are you sure?' } %>
                                                                    
                                                                  </div>
            </div>
          </div>
        </div>
     

            
    <% end %>

  </div>

