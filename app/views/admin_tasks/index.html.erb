<p id="notice"><%= notice %></p>

<h1>Listing Admin Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Media</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_tasks.each do |admin_task| %>
      <tr>
        <td><%= admin_task.title %></td>
        <td><%= admin_task.description %></td>
        <td><%= admin_task.media %></td>
        <td><%= admin_task.due_date %></td>
        <td><%= link_to 'Show', admin_task %></td>
        <td><%= link_to 'Edit', edit_admin_task_path(admin_task) %></td>
        <td><%= link_to 'Destroy', admin_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

